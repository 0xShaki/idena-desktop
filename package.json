{
  "name": "idena-desktop",
  "productName": "Idena",
  "version": "0.0.1",
  "main": "main/index.js",
  "scripts": {
    "start": "dotenv electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "dotenv next build renderer && next export renderer",
    "dist": "npm run build && build --dir",
    "clean": "rm -rf renderer/out dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "node": "make node",
    "node:auto": "make node-auto",
    "node:clean": "make clean"
  },
  "build": {
    "appId": "io.idena",
    "asar": false,
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "extraResources": [
      {
        "from": "renderer/out",
        "to": "app/renderer"
      }
    ],
    "mac": {
      "icon": "main/static/icons/mac.icns"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "dotenv-cli": "^2.0.0",
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "ansi-to-html": "^0.6.10",
    "axios": "^0.18.0",
    "electron-is-dev": "^1.0.1",
    "electron-next": "^3.1.5",
    "nanoid": "^2.0.1",
    "next": "^8.1.0",
    "nprogress": "^0.2.0",
    "polished": "^3.3.0",
    "prop-types": "^15.6.2",
    "react": "^16.8.4",
    "react-beautiful-dnd": "^10.0.4",
    "react-dom": "^16.8.4",
    "rlp": "^2.2.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  }
}
